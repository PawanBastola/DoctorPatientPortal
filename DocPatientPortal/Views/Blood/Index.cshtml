@page
@model DocPatientPortal.Views.Blood.IndexModel
@{
    
    Layout = "_LayoutPatient";
}
<br />
<br />
<form method="post" asp-controller="Blood" asp-action="addUsers">

    Name: <input type="text" name="pname"/>
    Address: <input type="text" name="paddress"/>
    Blood Group: <input type="text" name="pblood"/>
    <button class="btn btn-primary">Insert</button>
</form>
<br />

<table class="table table-dark table-hover">
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>ADDRESS</th>
        <th>BLOOD GP.</th>
        <th>Number</th>
        <th>Update/Delete</th>
    </tr>

    
    @foreach (var item in ViewBag.Data)
    {

<tr>
    <td>@item.pid</td>
    <td>@item.pname</td>
    <td>@item.paddress</td>
    <td>@item.pblood</td>
    <td>@item.pnumber</td>
    <td><a asp-controller="Blood" asp-action="Update" asp-route-pid="@item.pid" class="btn btn-success">Update</a>   <a asp-controller="Blood" asp-action="Delete" asp-route-pid="@item.pid" class="btn btn-danger">Delete</a></td>
</tr>
    }

</table>
