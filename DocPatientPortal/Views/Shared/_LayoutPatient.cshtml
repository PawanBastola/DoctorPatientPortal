<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DocPatientPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/mycss.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!--START navigation bar -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <a href="#" class="navbar-brand" controller="Home" action="Index">MyDoctor</a>
            <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item active dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown">Appointment</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropDown">
                            <a class="dropdown-item" asp-controller="BookAppointment" asp-action="Index">Book</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="ViewBooking" asp-action="Index">View</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="CancelBooking" asp-action="Index">Cancel</a>

                        </div>
                    </li>

                    <li class="nav-item ">
                        <a asp-controller="SearchDoctor" asp-action="Index" class="nav-link">Search Doctor</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown">Organ</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropDown">
                            <a class="dropdown-item" asp-controller="DonateOrgan" asp-action="Index">Donate</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="SearchOrgan" asp-action="Index">Search</a>
                        </div>
                    </li>
                    <li class="nav-item ">
                        <a asp-controller="CustomerFeedback" asp-action="Index" class="nav-link">Feedback</a>
                    </li>
                    

                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <div class="roundimage">
                        <a> <img src="~/image/profile.jpg" alt="User Profile" /> </a>
                        </div>
                        
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br> <br> <br>
    <!-- Start Footer -->
    <footer>
        <div class="container-fluid">
            <div class="row bg-dark align-items-center">
                <div class="col text-light">
                    <table class="table table-fluid table-responsive table-dark">
                        <thead class="text-light ">
                            <tr>
                                <th>About Us</th>
                                <th>Services</th>
                                <th>Developers</th>
                                <th>Contact Us</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td> <p>we're the team of doctors</p> </td>
                                <td> <p>online appointments</p> </td>
                                <td><p>Pawan Bastola</p></td>
                                <td> <p>Email :- pawanbastola3@gmail.com</p> </td>

                            </tr>
                        </tbody>

                        <tfoot>

                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="row bg-dark">
                <div class="col text-light">
                    &#169 2020 All rights reserved | MyDoctor Services
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
