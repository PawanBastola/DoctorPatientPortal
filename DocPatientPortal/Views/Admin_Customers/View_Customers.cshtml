@page
@model DocPatientPortal.Views.Admin_Doctors.View_DoctorsModel
@{
    Layout = "_LayoutPractice";

}

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.datatablejquery').DataTable();

        });
    </script>
}
    <br />


    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-sm-flex align-items-center mb-4">
                        <h4 class="card-title mb-sm-0">Customer List</h4>
                    </div>
                    <table class="table table-light table-hover datatablejquery">
                        <thead>

                            <tr>
                                <th>sn</th>
                                <th>Name</th>
                                <th>Phone number</th>
                                <th>Email</th>
                                <th>Blood Group</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 1;
                            }
                            @foreach (var item in ViewBag.customers)
                            {

                                <tr>
                                    <td>@i</td>
                                    <td>@item.p_fullname</td>
                                    <td>@item.p_contact</td>
                                    <td>@item.p_email</td>
                                    <td>@item.p_blood</td>
                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
