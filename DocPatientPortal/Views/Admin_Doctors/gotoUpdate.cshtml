@page
@model DocPatientPortal.Views.Admin_Doctors.gotoUpdateModel
@{
    Layout = "_LayoutPractice";
}
<br />


<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex align-items-center mb-4">
                    <h4 class="card-title mb-sm-0">Customer List</h4>
                </div>

                <!--doctor update place-->
                <div class="container doctor_panel">
                    <div class="row">
                        <div class="col-md-8 mx-auto ">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col">
                                            <center>
                                                <img src="~/image/doc_signup_icon.jpg" style="width:150px; height:150px;" />
                                            </center>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <center>
                                                <h3>Doctor Update Form</h3>
                                            </center>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <hr />
                                        </div>
                                    </div>


                                    <form id="registrationForm" autocomplete="off" method="post" enctype="multipart/form-data" asp-controller="Admin_Doctors" asp-action="Update_Doctor">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Full Name</label>
                                                    <input type="text" Class="form-control" Placeholder="Full Name" name="d_full_name" value="@ViewBag.thisdoctor.d_full_name">

                                                </div>
                                            </div>
                                            <!--kdjj-->
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label>Date of Birth</label>
                                                    <input type="text" class="form-control" readonly name="d_dob" value="@ViewBag.thisdoctor.d_dob.ToString("dd/MM/yyyy")" placeholder="mm/dd/yyyy" />
                                                </div>
                                            </div>
                                            <!--kdjj-->
                                            @*<div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Date Of Birth</label>
                                                        <input type="date" TextMode="Date" Class="form-control" name="d_dob" value="@ViewBag.thisdoctor.d_dob" />
                                                    </div>
                                                </div>*@
                                        </div>

                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Contact Number</label>
                                                    <input type="number" TextMode="Number" Class="form-control" Placeholder="enter phone number" name="d_contact" value="@ViewBag.thisdoctor.d_contact" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Email Id</label>
                                                    <input type="email" ID="TextBox4" TextMode="Email" Class="form-control" name="d_email" value="@ViewBag.thisdoctor.d_email">
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>State</label>

                                                    <select Class="form-control" name="d_state">

                                                        <option>@ViewBag.thisdoctor.d_state</option>
                                                        <option>Province 1</option>
                                                        <option>Province 2</option>
                                                        <option>Province 3</option>
                                                        <option>Province 4</option>
                                                        <option>Province 5</option>
                                                        <option>Province 6</option>
                                                        <option>Province 7</option>


                                                    </select>
                                                </div>
                                            </div>
                                        </div>



                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>City</label>

                                                    <input Placeholder="City" Class="form-control" name="d_city" value="@ViewBag.thisdoctor.d_city" />
                                                </div>
                                            </div>
                                            <!--gender Area-->
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label>Gender</label><br />

                                                    <select Class="form-control" name="d_gender">
                                                        <option>@ViewBag.thisdoctor.d_gender</option>
                                                        <option>male</option>
                                                        <option>female</option>
                                                        <option>other</option>
                                                    </select>

                                                </div>
                                            </div>
                                            <!--End gender Area-->
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Full Address</label>
                                                    <input type="text" TextMode="MultiLine" placeholder="enter your full and precise address" Class="form-control" name="d_full_address" value="@ViewBag.thisdoctor.d_full_address">
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Blood Group</label>
                                                    <select Class="form-control text-black" name="d_blood_group">

                                                        <option>@ViewBag.thisdoctor.d_blood_group</option>
                                                        <option>A+</option>
                                                        <option>A-</option>
                                                        <option>O+</option>
                                                        <option>O-</option>
                                                        <option>AB+</option>
                                                        <option>AB-</option>


                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Speciality</label>
                                                    <select Class="form-control" name="d_speciality">
                                                        <option>@ViewBag.thisdoctor.d_speciality</option>

                                                        @foreach (var item in ViewBag.speciality)
                                                        {
                                                            <option>@item.spec</option>
                                                        }


                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <!--hidden-->

                                        <input type="text" hidden value="@ViewBag.thisdoctor.d_certificate" name="d_certificate">
                                        <input type="text" hidden value="@ViewBag.thisdoctor.d_username" name="username">
                                        <input type="text" hidden value="@ViewBag.thisdoctor.d_id" name="id">




                                        <!--hidden ends-->

                                        <div class="row">
                                            <div class="col">
                                                <div class="form-group">
                                                    <input type="submit" role="button" class="btn btn-success btn-block btn-lg" value="UPDATE">

                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!--doctor panel-->
                <!--doctor update place-->

            </div>
        </div>
    </div>
</div>