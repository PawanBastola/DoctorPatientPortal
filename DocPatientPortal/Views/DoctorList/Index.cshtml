@page
@model DocPatientPortal.Views.DoctorList.IndexModel
@{
    Layout = "_LayoutPatient";
    
}
<br />

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>
}




<table class="table table-secondary table-hover " id="datatable">
    <thead>

        <tr>
            <th>sn</th>
            <th>Name</th>
            <th>Speciality</th>
            <th>Phone number</th>
            <th>Email</th>

        </tr>
    </thead>
    <tbody>
      @{ var i = 1;} 
        @foreach (var doctor in ViewBag.Doctors)
        {
           
            <tr>
                <td>@i</td>
                <td>@doctor.d_full_name</td>
                <td>@doctor.d_speciality</td>
                <td>@doctor.d_contact</td>
                <td>@doctor.d_email</td>

            </tr>
            i++;
        }
    </tbody>
</table>