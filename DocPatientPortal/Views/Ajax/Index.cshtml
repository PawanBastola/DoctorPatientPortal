@section Scripts{ 

<!--Date validation-->
<script>

    var today = new Date();
    var day = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!
    var yyyy = today.getFullYear();
    if (day < 10) {
        day = '0' + day
    }
    if (mm < 10) {
        mm = '0' + mm
    }

    today = yyyy + '-' + mm + '-' + day;

    document.getElementById("datefield").setAttribute("min", today);

</script>

